{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.js"]
}
